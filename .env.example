# ============================================
# Azure OpenAI 配置
# ============================================
# 完整的 Endpoint URL（包含 deployment 和 api-version）
# 格式: https://<resource-name>.openai.azure.com/openai/deployments/<deployment-name>/chat/completions?api-version=<api-version>
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/gpt-4o-mini/chat/completions?api-version=2024-02-15-preview

# Azure OpenAI API Key
AZURE_OPENAI_API_KEY=your-api-key-here

# ============================================
# OpenAI 配置（如果不使用 Azure）
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1/chat/completions

# ============================================
# 預設模型
# ============================================
# 可選: gpt-4o, gpt-4o-mini, gpt-4, gpt-3.5-turbo, deepseek, qwen, etc.
DEFAULT_MODEL=gpt-4o-mini

# ============================================
# 資料庫路徑配置
# ============================================
# 預設資料庫根目錄
DB_ROOT_DIRECTORY=PosTest

# 資料庫模式（dev, train, test）
DB_MODE=dev

# ============================================
# Few-shot 配置
# ============================================
# Few-shot 範例數量
FEWSHOT_EXAMPLES_COUNT=5

# ============================================
# Pipeline 配置
# ============================================
# Pipeline 節點（用 + 分隔）
PIPELINE_NODES=generate_db_schema+extract_col_value+extract_query_noun+column_retrieve_and_other_info+candidate_generate+align_correct+vote

# ============================================
# Embedding 配置
# ============================================
# BERT 模型名稱
BERT_MODEL=all-MiniLM-L6-v2

# Embedding 設備（cpu, cuda, mps）
EMBEDDING_DEVICE=cpu

# ============================================
# Web 界面配置
# ============================================
# Web 界面端口
WEB_PORT=5002

# Few-shot 管理界面端口
FEWSHOT_PORT=5003

# ============================================
# Docker 配置
# ============================================
# Docker Compose 服務名稱
DOCKER_SERVICE_NAME=opensearch-sql-web

# Docker 容器端口映射
DOCKER_WEB_PORT=5002
DOCKER_FEWSHOT_PORT=5003

# ============================================
# 日誌配置
# ============================================
# 日誌目錄
LOG_DIRECTORY=logs

# 日誌級別（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# ============================================
# DeepSeek 配置（如果使用）
# ============================================
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/chat/completions

# ============================================
# Qwen 配置（如果使用）
# ============================================
QWEN_API_KEY=your-qwen-api-key-here

# ============================================
# 其他配置
# ============================================
# 溫度參數（0.0 - 2.0）
TEMPERATURE=0.0

# Top P 參數（0.0 - 1.0）
TOP_P=1.0

# 最大 Token 數
MAX_TOKENS=800

# 重試次數
MAX_RETRIES=50
